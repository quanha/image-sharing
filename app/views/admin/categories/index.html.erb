<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> System <span>> List of categories</span></h1>
  </div>
  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
    <ul id="sparks" class="">
      <li class="sparks-info">
        <%= link_to 'Add new category', new_admin_category_path, :class => 'btn btn-primary'%>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="true">
      <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2><%= 'List of Categories' %></h2>
      </header>
      <div>
        <div class="jarviswidget-editbox"></div>

        <div class="widget-body">
          <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
            <tr>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter name" /></th>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter description" /></th>
              <th class="hasinput" ></th>
              <th class="hasinput" ></th>
            </tr>
            <tr>
              <th width="10%">Name</th>
              <th>Description</th>
              <th width="10%">At Homepage</th>
              <th width="14%">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @categories.each_with_index do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= category.description %></td>
                  <td><center><% concat category.at_homepage.present? ? 'True' : 'False'  %></center></td>
                  <td>
                    <center>
                      <%= link_to(edit_admin_category_path(category), 'escape' => false, 'class' => 'btn btn-sm btn-default') do%>
                          <i class="fa fa-edit" title="Edit"></i>
                      <% end %>
                      <%= link_to(admin_category_path(category), data: { confirm: 'Are you sure?' }, 'class' => 'btn btn-sm btn-default deleteLin', method: :delete) do %>
                          <i class="fa fa-trash-o" title="Delete"></i>
                      <% end %>
                    </center>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </article>
</div>



