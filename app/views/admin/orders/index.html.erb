<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> System <span>> List of orders</span></h1>
  </div>
</div>
<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="true">
      <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2><%= 'List of orders' %></h2>
      </header>
      <div>
        <div class="jarviswidget-editbox"></div>

        <div class="widget-body">
          <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
            <tr>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter name" /></th>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter address" /></th>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter phone" /></th>
              <th class="hasinput" ></th>
            </tr>
            <tr>
              <th width="10%">Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th width="14%">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each_with_index do |order| %>
                <tr>
                  <td><%= order.name %></td>
                  <td><%= order.address %></td>
                  <td><%= order.phone %></td>
                  <td>
                    <center>
                      <%= link_to(admin_order_path(order), 'data-no-turbolink' => true, 'escape' => false, 'class' => 'btn btn-sm btn-default') do %>
                          <i class="fa fa-eye" title="Show" class="btn btn-sm btn-default" escape="false"></i>
                      <% end %>
                      <%= link_to(admin_order_path(order), data: { confirm: 'Are you sure?' }, 'class' => 'btn btn-sm btn-default deleteLin', method: :delete) do %>
                          <i class="fa fa-trash-o" title="Delete"></i>
                      <% end %>
                    </center>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </article>
</div>



