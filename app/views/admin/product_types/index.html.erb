<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> System <span>> List of product types</span></h1>
  </div>
  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
    <ul id="sparks" class="">
      <li class="sparks-info">
        <%= link_to 'Add new product type', new_admin_product_type_path, :class => 'btn btn-primary'%>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="true">
      <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2><%= 'List of product type' %></h2>
      </header>
      <div>
        <div class="jarviswidget-editbox"></div>

        <div class="widget-body">
          <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
            <tr>
              <th></th>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter name" /></th>
              <th class="hasinput"><input type="text" class="form-control" placeholder="Filter description" /></th>
              <th class="hasinput" ></th>
              <th class="hasinput" ></th>
            </tr>
            <tr>
              <th width="14%">Image</th>
              <th width="10%">Name</th>
              <th>Description</th>
              <th width="14%">Actions</th>
              <th width="14%">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @product_types.each_with_index do |product_type| %>
                <tr>
                  <td><center><%= image_tag(product_type.image.url(:thumb)) %></center></td>
                  <td><%= product_type.name %></td>
                  <td><%= product_type.description %></td>
                  <td><center><%= product_type.homepage == 0 ? 'False' : 'True' %></center></td>
                  <td>
                    <center>
                      <%= link_to(edit_admin_product_type_path(product_type), 'escape' => false, 'class' => 'btn btn-sm btn-default') do%>
                          <i class="fa fa-edit" title="Edit"></i>
                      <% end %>
                      <%= link_to(admin_product_type_path(product_type), 'class' => 'btn btn-sm btn-default deleteLin', method: :delete, data: { confirm: 'Are you sure?' }) do %>
                          <i class="fa fa-trash-o" title="Delete"></i>
                      <% end %>
                    </center>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </article>

</div>



